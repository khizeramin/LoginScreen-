<Window x:Class="LoginScreen.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        
        Title="Login" Height="500" Width="500" Background="#FF9C9CA3">
    <Border Background="#2e3137" CornerRadius="20" Margin="30">
        <StackPanel Margin ="30">
            <Label Content="Login" Foreground="White" FontSize="40" HorizontalAlignment="Center" Margin="128,0,136.6,0" Width="109"/>
            <Separator/>
            <Separator/>
            <Label Content="Username"  Foreground="White" FontSize="20"/>
            <TextBox x:Name="UserTxt" Background="Gray" Foreground="Wheat" FontSize="11"/>
            <Label Content="Password"  Foreground="White" FontSize="20"/>

            <PasswordBox x:Name="PassTxt" Background="Gray" Foreground="Wheat" FontSize="11"/>
            <Button Name="btnSubmit" Content="Submit" Margin="70 30" Background="Gray" Foreground="White" FontSize="18" Click="BtnSubmit_Click"/>



        </StackPanel>
    </Border>
</Window>
